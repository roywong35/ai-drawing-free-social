{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "posts-cache",
      "urls": [
        "/api/posts/feed/**",
        "/api/posts/search/**",
        "/api/users/search/**"
      ],
      "cacheConfig": {
        "strategy": "cacheFirst",
        "maxSize": 200,
        "maxAge": "1h",
        "timeout": "10s"
      }
    },
    {
      "name": "read-only-api",
      "urls": [
        "/api/posts/public/**",
        "/api/posts/*/",
        "/api/users/*/",
        "/api/chat/**"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 100,
        "maxAge": "15m",
        "timeout": "3s"
      }
    },
    {
      "name": "write-api",
      "urls": [
        "/api/posts/*/*/like/**",
        "/api/posts/*/*/bookmark/**",
        "/api/posts/*/*/repost/**",
        "/api/users/*/follow/**",
        "/api/posts/*/post/**",
        "/api/posts/*/*/quote/**"
      ],
      "cacheConfig": {
        "strategy": "networkOnly",
        "maxSize": 0,
        "maxAge": "0s"
      }
    }
  ]
}